


{{#partial "content"}}
        <form action="/heroes/new" method="post">
            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter name:" required>
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <input type="number" class="form-control" id="age" name="age" placeholder="Heroes Age: " required>
            </div>
            <div class="form-group">
                <label for="superpower">Super Power:</label>
                <input type="text" class="form-control" id="superpower" name="power" placeholder="Enter Superpower" required>
            </div>
            <div class="form-group">
                <label for="weakness">Weakness</label>
                <input type="text" class="form-control" id="weakness" name="weakness" placeholder="Enter Weakness" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-default">Create Hero!</button>
                <p>Click <a href="/heroSquad">here</a> to view squads </p>

            </div>
        </form>
<hr>
    {{#each myHero}}
        <div class="container">
            <h5>Hero Details:</h5>
            <p>Name :{{name}}</p>
            <p>Age :{{age}}</p>
            <p>Super-power :{{superpower}}</p>
            <p>Weakness :{{weakness}}</p>
        </div>
    {{/each }}
{{/partial}}

{{> layout.hbs}}