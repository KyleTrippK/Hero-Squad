
{{#partial "content"}}
<p><a href="/">home</a> </p>

    <h2 class="text-center"><p> Add new Squad </p></h2>
<form action="/squad/new" method="post">
        <label for="mSquadName">Name:</label>
        <input type="text" class="form-control" id="mSquadName" name="mSquadName" placeholder="Squad Name:" required>

        <label for="mCause">Cause:</label>
        <input type="text" class="form-control" id="mCause" name="mCause" placeholder="Mission:" required>

        <div class="text-center">
            <button type="submit" class="btn btn-default mt-4">Create Squad!</button>
        </div>
</form>

{{#each mySquad}}
    <p> Squad's Name is {{mSquadName}}</p>
    <p> Squad's Cause is  {{mCause}}</p>
{{/each}}
{{/partial}}

{{> layout.hbs}}